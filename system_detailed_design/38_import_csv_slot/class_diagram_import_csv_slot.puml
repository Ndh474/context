@startuml import_csv_slot
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SlotController {
  + importSlots(file, mode) : Response
  + importExamSlots(file, mode) : Response
}

' --- SERVICE ---
class SlotService {
  + importFromCsv(file, mode) : ImportResult
  + importExamSlotsFromCsv(file, mode) : ImportResult
  + processOneSlotRow(row, mode) : void
  + processOneExamSlotRow(row, mode) : void
  + createInitialAttendanceRecords(slot) : void
}

class CsvParserService {
  + parseSlotCsv(file) : List<Row>
  + parseExamSlotCsv(file) : List<Row>
}

' --- REPOSITORY ---
interface SlotRepository <<interface>> {
  + existsByRoomAndTimeRange(roomId, startTime, endTime, excludeId) : boolean
  + existsByStaffAndTimeRange(staffId, startTime, endTime, excludeId) : boolean
  + save(slot : Slot) : Slot
}

interface ClassRepository <<interface>> {
  + findByCodeAndSemesterCode(classCode, semesterCode) : AcademicClass
}

interface SemesterRepository <<interface>> {
  + findByCode(code : String) : Semester
}

interface RoomRepository <<interface>> {
  + findByName(name : String) : Room
}

interface UserRepository <<interface>> {
  + findByUsernameWithRoles(username : String) : Optional<User>
}

interface SubjectRepository <<interface>> {
  + findByCode(code : String) : Subject
}

interface ExamSlotSubjectRepository <<interface>> {
  + findBySlotIdAndSubjectId(slotId, subjectId) : Optional<ExamSlotSubject>
  + save(examSlotSubject) : ExamSlotSubject
}

' --- ENTITIES ---
class Slot {
  - id : Integer
  - title : String
  - startTime : LocalDateTime
  - endTime : LocalDateTime
  - slotCategory : SlotCategory
  - active : boolean
}

class AcademicClass {
  - id : Short
  - code : String
  - active : boolean
}

class Semester {
  - id : Short
  - name : String
  - code : String
  - active : boolean
}

class Room {
  - id : Short
  - name : String
  - active : boolean
}

class User {
  - id : Integer
  - username : String
  - fullName : String
  - active : boolean
}

class Subject {
  - id : Short
  - name : String
  - code : String
  - active : boolean
}

class ExamSlotSubject {
  - id : Integer
  - isActive : boolean
}

' --- DEPENDENCY INJECTION (Association) ---
SlotController -down-> SlotService
SlotService -down-> CsvParserService
SlotService -down-> SlotRepository
SlotService -down-> ClassRepository
SlotService -down-> SemesterRepository
SlotService -down-> RoomRepository
SlotService -down-> UserRepository
SlotService -down-> SubjectRepository
SlotService -down-> ExamSlotSubjectRepository

' --- REPOSITORY USAGE (Dependency) ---
SlotRepository .down.> Slot
ClassRepository .down.> AcademicClass
SemesterRepository .down.> Semester
RoomRepository .down.> Room
UserRepository .down.> User
SubjectRepository .down.> Subject
ExamSlotSubjectRepository .down.> ExamSlotSubject

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Slot o-right- AcademicClass
Slot o-right- Semester
Slot o-right- Room
Slot o-right- User
ExamSlotSubject o-right- Slot
ExamSlotSubject o-right- Subject

@enduml
