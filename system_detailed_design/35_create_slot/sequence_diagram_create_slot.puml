@startuml create_slot
!theme plain
hide footbox

actor Admin
participant ":SlotController" as Controller
participant ":SlotService" as Service
participant ":SlotRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: POST /api/v1/slots
activate Controller

Controller -> Service: create(request)
activate Service

' Validation logic (internal: time range, category, conflicts, semester/class/room/staff validation, subjects for exam)

alt Validation failed
    Service -->> Controller: <<throw>> ValidationException
    Controller --> Admin: 400 Bad Request / 404 Not Found
end

Service -> Repository: save(slot)
activate Repository

Repository -> DB: Insert New Slot
activate DB
DB --> Repository: Saved Slot
deactivate DB

Repository --> Service: Slot
deactivate Repository

' Create initial attendance records (internal)

Service --> Controller: Slot
deactivate Service

Controller --> Admin: 201 Created
deactivate Controller

@enduml
