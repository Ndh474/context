@startuml create_slot
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SlotController {
  + create(request) : Response
}

' --- SERVICE ---
class SlotService {
  + create(request) : Slot
  + createInitialAttendanceRecords(slot) : void
}

' --- REPOSITORY ---
interface SlotRepository <<interface>> {
  + existsByRoomAndTimeRange(roomId, startTime, endTime, excludeId) : boolean
  + existsByStaffAndTimeRange(staffId, startTime, endTime, excludeId) : boolean
  + save(slot : Slot) : Slot
}

' --- ENTITIES ---
class Slot {
  - id : Integer
  - title : String
  - description : String
  - slotCategory : SlotCategory
  - startTime : LocalDateTime
  - endTime : LocalDateTime
}

class AcademicClass {
  - id : Short
  - code : String
}

class Semester {
  - id : Short
  - name : String
  - code : String
}

class Room {
  - id : Short
  - name : String
}

class User {
  - id : Integer
  - fullName : String
}

' --- DEPENDENCY INJECTION (Association) ---
SlotController -down-> SlotService
SlotService -down-> SlotRepository

' --- REPOSITORY USAGE (Dependency) ---
SlotRepository .down.> Slot

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Slot o-left- AcademicClass
Slot o-left- Semester
Slot o-right- Room
Slot o-right- User

@enduml
