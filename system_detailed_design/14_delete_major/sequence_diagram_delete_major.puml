@startuml delete_major
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:DeleteMajorDialog" as UI
participant "«control»\n:MajorController" as Controller
participant "«service»\n:MajorService" as Service
participant "«database wrapper»\n:MajorRepository" as Repository

' === MAIN FLOW ===
DataOperator -> UI: Click "Delete" button
activate UI

UI -> UI: Show confirmation dialog

DataOperator -> UI: Confirm delete
UI -> Controller: DELETE /api/v1/majors/{id}
activate Controller

Controller -> Service: delete(id)
activate Service

' === CHECK EXISTENCE ===
Service -> Repository: existsById(id)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt Major not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller -->> UI: 404 Not Found
    UI -->> DataOperator: Show error message
end

' === CHECK SUBJECTS ===
Service -> Repository: countSubjectsByMajorId(id)
activate Repository
Repository -->> Service: Long
deactivate Repository

alt Has subjects
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> DataOperator: Show error message\n"Cannot delete major with subjects"
end

' === CHECK STUDENTS ===
Service -> Repository: countStudentsByMajorId(id)
activate Repository
Repository -->> Service: Long
deactivate Repository

alt Has students
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> DataOperator: Show error message\n"Cannot delete major with students"
end

' === DELETE OPERATION ===
Service -> Repository: deleteById(id)
activate Repository

alt Foreign key constraint violation
    Repository -->> Service: <<throw>> DataIntegrityViolationException
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> DataOperator: Show error message
end

Repository -->> Service: void
deactivate Repository

Service -->> Controller: void
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Show success message\nClose dialog & refresh list
deactivate UI

@enduml
