@startuml create_semester
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:SemesterFormDialog" as UI
participant "«control»\n:SemesterController" as Controller
participant "«service»\n:SemesterService" as Service
participant "«database wrapper»\n:SemesterRepository" as Repository
participant "«entity»\n:Semester" as Entity

' === MAIN FLOW ===
DataOperator -> UI: Click "Create Semester"
activate UI

UI -> UI: Open form dialog

DataOperator -> UI: Input semester data\n(name, code, startDate, endDate)

DataOperator -> UI: Submit form
UI -> Controller: POST /api/v1/semesters
activate Controller

Controller -> Service: create(request)
activate Service

' === VALIDATION ===
alt startDate >= endDate
    Service -->> Controller: <<throw>> InvalidDateException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

Service -> Repository: existsByCode(code)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt code exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

Service -> Repository: existsByName(name)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt name exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

Service -> Repository: existsByDateRangeOverlap(startDate, endDate)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt date range overlaps
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

' === CREATE ENTITY ===
Service -> Entity: new Semester(request)
activate Entity
Entity -->> Service: semester
deactivate Entity

' === SAVE ===
Service -> Repository: save(semester)
activate Repository
Repository -->> Service: savedSemester
deactivate Repository

Service -->> Controller: SemesterDTO
deactivate Service

Controller -->> UI: 201 Created
deactivate Controller

UI -->> DataOperator: Show success message\nClose dialog & refresh list
deactivate UI

@enduml
