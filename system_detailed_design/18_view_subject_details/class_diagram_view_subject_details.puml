@startuml view_subject_details
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SubjectController {
  + findById(id) : Response
}

' --- SERVICE ---
class SubjectService {
  + findById(id) : Subject
}

' --- REPOSITORY ---
interface SubjectRepository <<interface>> {
  + findById(id : Short) : Optional<Subject>
  + countAllClassesBySubjectId(id : Short) : long
  + countActiveClassesBySubjectId(id : Short) : long
}

' --- ENTITIES ---
class Subject {
  - id : Short
  - name : String
  - code : String
  - isActive : Boolean
  - majors : Set<Major>
  - academicClasses : Set<AcademicClass>
}

class Major {
  - id : Short
  - name : String
  - code : String
}

class AcademicClass {
  - id : Integer
  - name : String
  - code : String
}

' --- DEPENDENCY INJECTION (Association) ---
SubjectController -down-> SubjectService
SubjectService -down-> SubjectRepository

' --- REPOSITORY USAGE (Dependency) ---
SubjectRepository .down.> Subject

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Subject o-right- Major
Subject o-left- AcademicClass

@enduml
