@startuml Remove Participant from Exam Slot - Class Diagram
!theme plain
skinparam classAttributeIconSize 0
hide circle
skinparam circledCharacterRadius 0

class ExamSlotController {
  - examSlotService : ExamSlotService
  + removeParticipant(slotId : Integer, participantId : Long) : Response<Void>
}

class ExamSlotService {
  - examSlotParticipantRepository : ExamSlotParticipantRepository
  - slotRepository : SlotRepository
  - examAttendanceRepository : ExamAttendanceRepository
  + removeParticipant(slotId : Integer, participantId : Long) : void
}

interface ExamSlotParticipantRepository <<interface>> {
  + findById(id : Long) : Optional<ExamSlotParticipant>
  + delete(entity : ExamSlotParticipant) : void
}

interface SlotRepository <<interface>> {
  + findById(id : Integer) : Optional<Slot>
}

interface ExamAttendanceRepository <<interface>> {
  + findBySlotIdAndStudentUserId(slotId : Integer, studentUserId : Integer) : ExamAttendance
  + delete(entity : ExamAttendance) : void
}

class ExamSlotParticipant {
  - id : Long
  - examSlotSubject : ExamSlotSubject
  - studentUser : User
  - isEnrolled : Boolean
}

class Response<T> {
  - status : int
  - message : String
  - data : T
}

ExamSlotController --> ExamSlotService
ExamSlotService --> ExamSlotParticipantRepository
ExamSlotService --> SlotRepository
ExamSlotService --> ExamAttendanceRepository

ExamSlotController ..> Response : <<use>>
ExamSlotService ..> ExamSlotParticipant : <<use>>
ExamSlotParticipantRepository ..> ExamSlotParticipant : <<use>>

@enduml
