@startuml reset_password
!theme plain
hide footbox

actor Client
participant ":AuthenticationController" as Controller
participant ":AuthenticationService" as Service
participant ":PasswordResetTokenRepository" as TokenRepo
participant ":UserRepository" as UserRepo
participant "Database" as DB

' --- MAIN FLOW ---
Client -> Controller: POST /api/v1/auth/reset-password
activate Controller

Controller -> Service: resetPassword(request)
activate Service

' --- INPUT VALIDATION ---
group Password Validation
    Service -> Service: validate new password matches confirm password
end

alt Passwords do not match
    Service -->> Controller: <<throw>> IllegalArgumentException
    Controller --> Client: 400 Bad Request
end

' --- TOKEN VERIFICATION ---
Service -> TokenRepo: findByTokenHash(token)
activate TokenRepo

TokenRepo -> DB: Query Reset Token by Hash
activate DB
DB --> TokenRepo: Token Record / Null
deactivate DB

TokenRepo --> Service: Optional<PasswordResetToken>
deactivate TokenRepo

alt Token not found or expired
    Service -->> Controller: <<throw>> IllegalArgumentException
    Controller --> Client: 400 Bad Request
end

' --- USER LOOKUP ---
Service -> UserRepo: findByEmail(email)
activate UserRepo

UserRepo -> DB: Query User by Email
activate DB
DB --> UserRepo: User Record / Null
deactivate DB

UserRepo --> Service: Optional<User>
deactivate UserRepo

' --- VALIDATION LOGIC ---
alt User not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller --> Client: 404 Not Found
end

alt User is inactive
    Service -->> Controller: <<throw>> AccessDeniedException
    Controller --> Client: 403 Forbidden
end

' --- PASSWORD UPDATE ---
group Password Update
    Service -> Service: encode new password
    Service -> Service: update user password hash
end

Service -> UserRepo: save(user)
activate UserRepo

UserRepo -> DB: Update User Password
activate DB
DB --> UserRepo: Updated User
deactivate DB

UserRepo --> Service: User
deactivate UserRepo

' --- TOKEN CLEANUP ---
Service -> TokenRepo: delete(resetToken)
activate TokenRepo

TokenRepo -> DB: Delete Reset Token
activate DB
DB --> TokenRepo: Success
deactivate DB

TokenRepo --> Service: void
deactivate TokenRepo

Service --> Controller: Success Message
deactivate Service

Controller --> Client: 200 OK
deactivate Controller

@enduml
