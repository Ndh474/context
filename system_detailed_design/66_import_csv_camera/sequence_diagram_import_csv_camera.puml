@startuml import_csv_camera
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:GenericImportDialog" as UI
participant "«control»\n:CameraController" as Controller
participant "«service»\n:CameraService" as Service
participant "«service»\n:CsvParserService" as CsvParser
participant "«database wrapper»\n:CameraRepository" as Repository
participant "«entity»\n:Camera" as Entity

' === MAIN FLOW ===
DataOperator -> UI: Click "Import" button
activate UI

UI -> UI: Open import dialog

DataOperator -> UI: Select CSV file & import mode

DataOperator -> UI: Submit
UI -> Controller: POST /api/v1/cameras/import\n(file, mode)
activate Controller

alt File is empty
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

Controller -> Service: importFromCsv(file, mode)
activate Service

' === PARSE CSV ===
Service -> CsvParser: parseCameraCsv(file)
activate CsvParser
CsvParser -->> Service: List<CameraCsvRow>
deactivate CsvParser

alt CSV parsing fails
    Service -->> Controller: <<throw>> BadRequestException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

' === BATCH PROCESSING ===
loop For each unique CSV row
    Service -> Service: validateRoom(roomName)
    note right: Lookup room by name

    alt Room not found
        Service -> Service: Collect error, continue
    end

    Service -> Repository: findByName(name)
    activate Repository
    Repository -->> Service: Camera / null
    deactivate Repository

    alt Row validation fails (rtspUrl duplicate)
        Service -> Service: Collect error, continue
    else Create new camera
        Service -> Entity: new Camera(row)
        activate Entity
        Entity -->> Service: camera
        deactivate Entity

        Service -> Repository: save(camera)
        activate Repository
        Repository -->> Service: savedCamera
        deactivate Repository
    else Update existing camera (ADD_AND_UPDATE mode)
        Service -> Entity: updateFromRow(row)
        activate Entity
        Entity -->> Service: camera
        deactivate Entity

        Service -> Repository: save(camera)
        activate Repository
        Repository -->> Service: savedCamera
        deactivate Repository
    end
end

Service -->> Controller: ImportResultDTO
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Show import result\n(success/failure counts)
deactivate UI

@enduml
