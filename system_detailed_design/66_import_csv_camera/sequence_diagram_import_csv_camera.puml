@startuml import_csv_camera
!theme plain
hide footbox

actor Admin
participant ":CameraController" as Controller
participant ":CameraService" as Service
participant ":CsvParserService" as CsvParser
participant ":CameraRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: POST /api/v1/cameras/import
activate Controller

' File validation (internal)

alt File validation fails
    Controller --> Admin: 400 Bad Request
end

Controller -> Service: importFromCsv(file, mode)
activate Service

' --- PARSE CSV ---
Service -> CsvParser: parseCameraCsv(file)
activate CsvParser

CsvParser --> Service: List<CameraCsvRow>
deactivate CsvParser

alt CSV parsing fails
    Service -->> Controller: <<throw>> BadRequestException
    Controller --> Admin: 400 Bad Request
end

' CSV deduplication (internal)

' --- BATCH PROCESSING LOOP ---
loop For each unique CSV row
    ' Row validation (internal: room validation, name/RTSP URL uniqueness)

    Service -> Repository: findByName(name)
    activate Repository
    
    Repository -> DB: Query Camera by Name
    activate DB
    DB --> Repository: Camera / Null
    deactivate DB
    
    Repository --> Service: Camera
    deactivate Repository
    
    ' Business logic: create or update based on mode (internal)
    
    alt Validation fails
        Service --> Service: Collect error, continue
    else Validation passes
        Service -> Repository: save(camera)
        activate Repository
        
        Repository -> DB: Insert or Update Camera
        activate DB
        DB --> Repository: Saved Camera
        deactivate DB
        
        Repository --> Service: Camera
        deactivate Repository
    end
end

' Build result with success/failure counts (internal)

Service --> Controller: ImportResultDTO
deactivate Service

Controller --> Admin: 200 OK
deactivate Controller

@enduml
