@startuml view_list_student
!theme plain
hide footbox

actor "Data Operator" as Admin

participant "«user interaction»\n:StudentsPage" as UI
participant "«control»\n:StudentProfileController" as Controller
participant "«service»\n:StudentProfileService" as Service
participant "«database wrapper»\n:StudentProfileRepository" as Repository

' --- MAIN FLOW ---
Admin -> UI: View Student List
activate UI

UI -> Controller: GET /api/v1/student-profiles
activate Controller

Controller -> Service: search(request)
activate Service

' --- SEARCH QUERY ---
Service -> Repository: search(request)
activate Repository
Repository -->> Service: List<StudentProfileDTO>
deactivate Repository

Service -->> Controller: List<StudentProfileDTO>
deactivate Service

' --- COUNT QUERY ---
Controller -> Service: count(request)
activate Service

Service -> Repository: count(request)
activate Repository
Repository -->> Service: totalCount
deactivate Repository

Service -->> Controller: totalCount
deactivate Service

Controller -->> UI: 200 OK (Page<StudentProfileDTO>)
deactivate Controller

UI -->> Admin: Show student list
deactivate UI

@enduml
