@startuml View Major Details - Class Diagram
!theme plain
skinparam classAttributeIconSize 0
hide circle
skinparam circledCharacterRadius 0

class MajorController {
  - majorService : MajorService
  + findById(id : Short) : Response<MajorDTO>
}

class MajorService {
  - majorRepository : MajorRepository
  + findById(id : Short) : MajorDTO
}

interface MajorRepository <<interface>> {
  + findMajorDTOById(id : Short) : Optional<MajorDTO>
}

class Major {
  - id : Short
  - name : String
  - code : String
  - subjects : Set<Subject>
  - studentProfiles : Set<StudentProfile>
}

class BaseEntity {
  - isActive : Boolean
  - createdAt : Instant
  - updatedAt : Instant
}

class MajorDTO {
  - id : Short
  - name : String
  - code : String
  - totalSubject : Integer
}

class BaseDTO {
  - isActive : Boolean
  - createdAt : Instant
  - updatedAt : Instant
}

class Response<T> {
  - status : int
  - message : String
  - code : String
  - data : T
}

MajorController --> MajorService
MajorService --> MajorRepository

MajorController ..> Response : <<use>>
MajorController ..> MajorDTO : <<use>>
MajorService ..> MajorDTO : <<use>>
MajorRepository ..> Major : <<use>>
MajorRepository ..> MajorDTO : <<use>>

Major --|> BaseEntity
MajorDTO --|> BaseDTO

@enduml
