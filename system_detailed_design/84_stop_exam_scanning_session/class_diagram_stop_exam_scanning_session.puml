@startuml stop_exam_scanning_session
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SlotController {
  + stopExamSession(slotId, currentUserId) : Response
}

' --- SERVICE ---
class SlotSessionService {
  + stopExamSession(slotId, currentUserId) : SessionStatusResponse
}

class ExamAttendanceService {
  + applyRescanReviewFlags(slot, detectedStudentIds) : Map
}

class PythonBackendClient <<external>> {
  + stopRecognitionSession(slotId) : PythonSessionResponse
}

' --- REPOSITORY ---
interface SlotRepository <<interface>> {
  + findById(id) : Optional<Slot>
  + save(slot) : Slot
}

interface ExamAttendanceRepository <<interface>> {
  + findBySlotIdAndStatus(slotId, status) : List<ExamAttendance>
  + saveAll(records) : List<ExamAttendance>
}

' --- ENTITIES ---
class Slot {
  - id : Integer
  - examSessionStatus : SessionStatus
  - lastExamSessionStoppedAt : Instant
  - staff : User
}

class ExamAttendance {
  - id : Long
  - status : AttendanceStatus
  - method : AttendanceMethod
  - needsReview : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
SlotController -down-> SlotSessionService
SlotSessionService -down-> SlotRepository
SlotSessionService -down-> ExamAttendanceRepository
SlotSessionService -down-> ExamAttendanceService
SlotSessionService -down-> PythonBackendClient

' --- REPOSITORY USAGE (Dependency) ---
SlotRepository .down.> Slot
ExamAttendanceRepository .down.> ExamAttendance

' --- ENTITY RELATIONSHIPS (Aggregation) ---
ExamAttendance o-right- Slot

@enduml
