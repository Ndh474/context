@startuml view_list_semester
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SemesterController {
  + search(request) : PagingResponse
  + findById(id) : Response
}

' --- SERVICE ---
class SemesterService {
  + search(request) : List<Semester>
  + count(request) : Long
  + findById(id) : Semester
}

' --- REPOSITORY ---
interface SemesterRepository <<interface>> {
  + findById(id : Short) : Optional<Semester>
  + save(semester : Semester) : Semester
  + search(request) : List<Semester>
  + count(request) : Long
}

' --- ENTITIES ---
class Semester {
  - id : Short
  - name : String
  - code : String
  - startDate : LocalDate
  - endDate : LocalDate
  - isActive : Boolean
  - academicClasses : Set<AcademicClass>
}

class AcademicClass {
  - id : Integer
  - name : String
  - code : String
}

' --- DEPENDENCY INJECTION (Association) ---
SemesterController -down-> SemesterService
SemesterService -down-> SemesterRepository

' --- REPOSITORY USAGE (Dependency) ---
SemesterRepository .down.> Semester

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Semester o-right- AcademicClass

@enduml
