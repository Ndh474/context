@startuml view_list_semester
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:SemestersPage" as UI
participant "«control»\n:SemesterController" as Controller
participant "«service»\n:SemesterService" as Service
participant "«database wrapper»\n:SemesterRepository" as Repository

' === MAIN FLOW ===
DataOperator -> UI: Navigate to Semesters page
activate UI

UI -> UI: Initialize filters\n(search, sort, pagination)

UI -> Controller: GET /api/v1/semesters?page=1&pageSize=10&...
activate Controller

Controller -> Service: search(request)
activate Service

Service -> Repository: search(request)
activate Repository
Repository -->> Service: List<SemesterDTO>
deactivate Repository

Service -->> Controller: List<SemesterDTO>
deactivate Service

Controller -> Service: count(request)
activate Service

Service -> Repository: count(request)
activate Repository
Repository -->> Service: Long
deactivate Repository

Service -->> Controller: Long
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Display semester table\nwith pagination
deactivate UI

@enduml
