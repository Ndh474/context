@startuml view_room_details
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:RoomFormDialog" as UI
participant "«control»\n:RoomController" as Controller
participant "«service»\n:RoomService" as Service
participant "«database wrapper»\n:RoomRepository" as Repository

' === MAIN FLOW ===
DataOperator -> UI: Click "Edit" on room row
activate UI

UI -> Controller: GET /api/v1/rooms/{id}
activate Controller

Controller -> Service: findById(id)
activate Service

Service -> Repository: findById(id)
activate Repository
Repository -->> Service: Optional<Room>
deactivate Repository

alt Room not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller -->> UI: 404 Not Found
    UI -->> DataOperator: Show error message
end

' === GET CAMERA STATISTICS ===
Service -> Repository: countAllCamerasByRoomId(id)
activate Repository
Repository -->> Service: Long
deactivate Repository

Service -> Repository: countActiveCamerasByRoomId(id)
activate Repository
Repository -->> Service: Long
deactivate Repository

Service -->> Controller: RoomDTO
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Display room details\nin edit form
deactivate UI

@enduml
