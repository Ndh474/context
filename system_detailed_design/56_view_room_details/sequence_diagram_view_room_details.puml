@startuml view_room_details
!theme plain
hide footbox

actor Admin
participant ":RoomController" as Controller
participant ":RoomService" as Service
participant ":RoomRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: GET /api/v1/rooms/{id}
activate Controller

Controller -> Service: findById(id)
activate Service

Service -> Repository: findById(id)
activate Repository

Repository -> DB: Query Room by ID
activate DB
DB --> Repository: Room Record / Null
deactivate DB

Repository --> Service: Optional<Room>
deactivate Repository

' --- VALIDATION LOGIC ---
alt Room not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller --> Admin: 404 Not Found
end

' --- GET CAMERA STATISTICS ---
Service -> Repository: countAllCamerasByRoomId(id)
activate Repository

Repository -> DB: Count All Cameras
activate DB
DB --> Repository: Total Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service -> Repository: countActiveCamerasByRoomId(id)
activate Repository

Repository -> DB: Count Active Cameras
activate DB
DB --> Repository: Active Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service --> Controller: RoomDTO
deactivate Service

Controller --> Admin: 200 OK
deactivate Controller

@enduml
