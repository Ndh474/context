@startuml delete_camera
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class CameraController {
  + delete(id) : Response
}

' --- SERVICE ---
class CameraService {
  + delete(id) : void
}

' --- REPOSITORY ---
interface CameraRepository <<interface>> {
  + existsById(id : Short) : boolean
  + countActiveSlotsByCameraId(cameraId, now) : long
  + deleteById(id : Short) : void
}

' --- ENTITIES ---
class Camera {
  - id : Short
  - name : String
  - rtspUrl : String
}

' --- DEPENDENCY INJECTION (Association) ---
CameraController -down-> CameraService
CameraService -down-> CameraRepository

' --- REPOSITORY USAGE (Dependency) ---
CameraRepository .down.> Camera

@enduml
