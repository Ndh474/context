@startuml delete_slot
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SlotController {
  + delete(id) : Response
}

' --- SERVICE ---
class SlotService {
  + delete(id) : void
}

' --- REPOSITORY ---
interface SlotRepository <<interface>> {
  + findById(id : Integer) : Optional<Slot>
  + deleteById(id : Integer) : void
}

interface AttendanceRecordRepository <<interface>> {
  + countBySlotIdAndStatus(slotId, status) : Long
  + findBySlotIdAndStatus(slotId, status) : List<AttendanceRecord>
  + deleteAll(records) : void
}

interface ExamAttendanceRepository <<interface>> {
  + countBySlotIdAndStatus(slotId, status) : Long
  + findBySlotIdAndStatus(slotId, status) : List<ExamAttendance>
  + deleteAll(records) : void
}

' --- ENTITIES ---
class Slot {
  - id : Integer
  - title : String
  - startTime : LocalDateTime
  - endTime : LocalDateTime
}

class AttendanceRecord {
  - id : Integer
  - status : AttendanceStatus
}

class ExamAttendance {
  - id : Integer
  - status : AttendanceStatus
}

' --- DEPENDENCY INJECTION (Association) ---
SlotController -down-> SlotService
SlotService -down-> SlotRepository
SlotService -down-> AttendanceRecordRepository
SlotService -down-> ExamAttendanceRepository

' --- REPOSITORY USAGE (Dependency) ---
SlotRepository .down.> Slot
AttendanceRecordRepository .down.> AttendanceRecord
ExamAttendanceRepository .down.> ExamAttendance

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Slot o-right- AttendanceRecord
Slot o-right- ExamAttendance

@enduml
