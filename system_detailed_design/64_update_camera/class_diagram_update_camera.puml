@startuml update_camera
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class CameraController {
  + update(id, request) : Response
}

' --- SERVICE ---
class CameraService {
  + update(id, request) : CameraDTO
}

' --- REPOSITORY ---
interface CameraRepository <<interface>> {
  + findById(id : Short) : Optional<Camera>
  + existsByNameAndIdNot(name, id) : boolean
  + existsByRtspUrlAndIdNot(rtspUrl, id) : boolean
  + save(camera : Camera) : Camera
}

' --- ENTITIES ---
class Camera {
  - id : Short
  - name : String
  - rtspUrl : String
  - active : Boolean
  - room : Room
}

class Room {
  - id : Short
  - name : String
  - location : String
}

' --- DEPENDENCY INJECTION (Association) ---
CameraController -down-> CameraService
CameraService -down-> CameraRepository

' --- REPOSITORY USAGE (Dependency) ---
CameraRepository .down.> Camera

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Camera o-right- Room

@enduml
