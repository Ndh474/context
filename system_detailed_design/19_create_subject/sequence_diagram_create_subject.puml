@startuml create_subject
!theme plain
hide footbox

actor Admin
participant ":SubjectController" as Controller
participant ":SubjectService" as Service
participant ":SubjectRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: POST /api/v1/subjects
activate Controller

Controller -> Service: create(request)
activate Service

' Validation logic (internal: code/name uniqueness, major validation)

alt Validation failed
    Service -->> Controller: <<throw>> ValidationException
    Controller --> Admin: 400 Bad Request / 409 Conflict
end

Service -> Repository: save(subject)
activate Repository

Repository -> DB: Insert New Subject with Majors
activate DB
DB --> Repository: Saved Subject
deactivate DB

Repository --> Service: Subject
deactivate Repository

Service --> Controller: Subject
deactivate Service

Controller --> Admin: 201 Created
deactivate Controller

@enduml
