@startuml update_subject
!theme plain
hide footbox

actor Admin
participant ":SubjectController" as Controller
participant ":SubjectService" as Service
participant ":SubjectRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: PUT /api/v1/subjects/{id}
activate Controller

Controller -> Service: update(id, request)
activate Service

' --- FIND EXISTING ---
Service -> Repository: findById(id)
activate Repository

Repository -> DB: Query Subject by ID
activate DB
DB --> Repository: Subject Record / Null
deactivate DB

Repository --> Service: Optional<Subject>
deactivate Repository

alt Subject not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller --> Admin: 404 Not Found
end

' Validation logic (internal: code/name uniqueness, major validation)

alt Validation failed
    Service -->> Controller: <<throw>> ValidationException
    Controller --> Admin: 400 Bad Request / 409 Conflict
end

Service -> Repository: save(subject)
activate Repository

Repository -> DB: Update Subject with Majors
activate DB
DB --> Repository: Updated Subject
deactivate DB

Repository --> Service: Subject
deactivate Repository

Service --> Controller: Subject
deactivate Service

Controller --> Admin: 200 OK
deactivate Controller

@enduml
