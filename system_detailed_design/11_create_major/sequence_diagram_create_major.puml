@startuml create_major
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:MajorFormDialog" as UI
participant "«control»\n:MajorController" as Controller
participant "«service»\n:MajorService" as Service
participant "«database wrapper»\n:MajorRepository" as Repository
participant "«entity»\n:Major" as Entity

' === MAIN FLOW ===
DataOperator -> UI: Click "Create Major"
activate UI

UI -> UI: Open form dialog

DataOperator -> UI: Input major data\n(name, code)

DataOperator -> UI: Submit form
UI -> Controller: POST /api/v1/majors
activate Controller

Controller -> Service: create(request)
activate Service

' === VALIDATION ===
Service -> Repository: existsByCode(code)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt code exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

Service -> Repository: existsByName(name)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt name exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

' === CREATE ENTITY ===
Service -> Entity: new Major(request)
activate Entity
Entity -->> Service: major
deactivate Entity

' === SAVE ===
Service -> Repository: save(major)
activate Repository
Repository -->> Service: savedMajor
deactivate Repository

Service -->> Controller: MajorDTO
deactivate Service

Controller -->> UI: 201 Created
deactivate Controller

UI -->> DataOperator: Show success message\nClose dialog & refresh list
deactivate UI

@enduml
