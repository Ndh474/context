@startuml create_major
!theme plain
hide footbox

actor Admin
participant ":MajorController" as Controller
participant ":MajorService" as Service
participant ":MajorRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: POST /api/v1/majors
activate Controller

Controller -> Service: create(request)
activate Service

' Validation logic (internal: code/name uniqueness)

alt Validation failed
    Service -->> Controller: <<throw>> ValidationException
    Controller --> Admin: 400 Bad Request / 409 Conflict
end

Service -> Repository: save(major)
activate Repository

Repository -> DB: Insert New Major
activate DB
DB --> Repository: Saved Major
deactivate DB

Repository --> Service: Major
deactivate Repository

Service --> Controller: MajorDTO
deactivate Service

Controller --> Admin: 201 Created
deactivate Controller

@enduml
