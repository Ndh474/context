@startuml delete_staff
!theme plain
hide footbox

actor "Data Operator" as Admin

participant "«user interaction»\n:DeleteStaffDialog" as UI
participant "«control»\n:StaffProfileController" as Controller
participant "«service»\n:StaffProfileService" as Service
participant "«database wrapper»\n:StaffProfileRepository" as Repository

' --- MAIN FLOW ---
Admin -> UI: Click "Delete" icon
activate UI

UI -> UI: Show confirmation dialog

Admin -> UI: Confirm Delete

UI -> Controller: DELETE /api/v1/staff-profiles/{id}
activate Controller

Controller -> Service: delete(id)
activate Service

' --- CHECK EXISTENCE ---
Service -> Repository: existsById(id)
activate Repository
Repository -->> Service: boolean
deactivate Repository

alt Staff not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller -->> UI: 404 Not Found
end

' --- DELETE OPERATION ---
Service -> Repository: deleteById(id)
activate Repository

alt Foreign key violation
    Repository -->> Service: <<throw>> DataIntegrityViolationException
    deactivate Repository
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> Admin: Show error: "Staff linked to other data"
else Success
    activate Repository
    Repository -->> Service: void
    deactivate Repository

    Service -->> Controller: void
    deactivate Service

    Controller -->> UI: 200 OK
    deactivate Controller

    UI -->> Admin: Remove from list
    deactivate UI
end

@enduml
