@startuml start_exam_verification_scanning
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SlotController {
  + startExamSession(slotId, currentUserId) : Response
}

' --- SERVICE ---
class SlotSessionService {
  + startExamSession(slotId, currentUserId) : SessionStatusResponse
}

class FaceEmbeddingService {
  + getActiveEmbedding(userId) : Optional<FaceEmbedding>
}

class PythonBackendClient <<external>> {
  + startRecognitionSession(request) : PythonSessionResponse
}

' --- REPOSITORY ---
interface SlotRepository <<interface>> {
  + findById(id) : Optional<Slot>
  + save(slot) : Slot
}

interface ExamSlotParticipantRepository <<interface>> {
  + findBySlotIdWithStudents(slotId) : List<ExamSlotParticipant>
}

interface CameraRepository <<interface>> {
  + findByRoom_Id(roomId) : List<Camera>
}

' --- ENTITIES ---
class Slot {
  - id : Integer
  - title : String
  - slotCategory : SlotCategory
  - examSessionStatus : SessionStatus
  - examScanCount : Integer
  - staff : User
  - room : Room
}

class ExamSlotParticipant {
  - id : Long
  - slot : Slot
  - studentUser : User
  - subject : Subject
}

class Camera {
  - id : Short
  - name : String
  - rtspUrl : String
  - active : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
SlotController -down-> SlotSessionService
SlotSessionService -down-> SlotRepository
SlotSessionService -down-> ExamSlotParticipantRepository
SlotSessionService -down-> CameraRepository
SlotSessionService -down-> FaceEmbeddingService
SlotSessionService -down-> PythonBackendClient

' --- REPOSITORY USAGE (Dependency) ---
SlotRepository .down.> Slot
ExamSlotParticipantRepository .down.> ExamSlotParticipant
CameraRepository .down.> Camera

' --- ENTITY RELATIONSHIPS (Aggregation) ---
ExamSlotParticipant o-right- Slot

@enduml
