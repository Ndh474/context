@startuml start_exam_verification_scanning
!theme plain
hide footbox

actor Supervisor
participant ":SlotController" as Controller
participant ":SlotSessionService" as Service
participant ":SlotRepository" as SlotRepo
participant ":PythonBackendClient" as PythonClient
participant "Recognition Service" as RecognitionService

' --- MAIN FLOW ---
Supervisor -> Controller: POST /api/v1/slots/{id}/exam-session/start
activate Controller

Controller -> Service: startExamSession(slotId, currentUserId)
activate Service

Service -> SlotRepo: findById(slotId)
activate SlotRepo

SlotRepo --> Service: Optional<Slot>
deactivate SlotRepo

alt Slot not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller --> Supervisor: 404 Not Found
end

' Validation logic (internal: authorization, active status, FINAL_EXAM category, session conflict check)

alt Validation failed
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller --> Supervisor: 403 Forbidden
end

' Get exam participants with embeddings (internal: query ExamSlotParticipant, filter active embeddings)

alt No participants with embeddings
    Service -->> Controller: <<throw>> BadRequestException
    Controller --> Supervisor: 400 Bad Request
end

' Get active cameras for room (internal)

alt No active cameras
    Service -->> Controller: <<throw>> BadRequestException
    Controller --> Supervisor: 400 Bad Request
end

' Update slot exam session status
Service -> SlotRepo: save(slot)
activate SlotRepo

SlotRepo --> Service: Slot
deactivate SlotRepo

' Call Python recognition service with callbackType=EXAM
Service -> PythonClient: startRecognitionSession(request)
activate PythonClient

PythonClient -> RecognitionService: POST /api/v1/sessions/start (callbackType=EXAM)
activate RecognitionService

RecognitionService --> PythonClient: SessionDataDTO
deactivate RecognitionService

PythonClient --> Service: PythonSessionResponse
deactivate PythonClient

Service --> Controller: SessionStatusResponse
deactivate Service

Controller --> Supervisor: 200 OK
deactivate Controller

@enduml
