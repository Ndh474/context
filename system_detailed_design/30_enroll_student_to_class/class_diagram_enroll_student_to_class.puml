@startuml enroll_student_to_class
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class EnrollmentController {
  + create(request) : Response
}

' --- SERVICE ---
class EnrollmentService {
  + create(request) : Enrollment
}

' --- REPOSITORY ---
interface EnrollmentRepository <<interface>> {
  + findById(id) : Optional<Enrollment>
  + existsById(id) : boolean
  + save(enrollment) : Enrollment
}

' --- ENTITIES ---
class Enrollment {
  - id : EnrollmentId
  - isEnrolled : boolean
  - createdAt : Instant
  - updatedAt : Instant
}

class AcademicClass {
  - id : Short
  - code : String
}

class User {
  - id : Integer
  - username : String
  - fullName : String
}

class StudentProfile {
  - userId : Integer
  - rollNumber : String
}

' --- DEPENDENCY INJECTION (Association) ---
EnrollmentController -down-> EnrollmentService
EnrollmentService -down-> EnrollmentRepository

' --- REPOSITORY USAGE (Dependency) ---
EnrollmentRepository .down.> Enrollment

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Enrollment o-left- AcademicClass
Enrollment o-right- User
User o-right- StudentProfile

@enduml
