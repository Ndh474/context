@startuml view_list_slot
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:SlotsPage" as UI
participant "«control»\n:SlotController" as Controller
participant "«service»\n:SlotService" as Service
participant "«database wrapper»\n:SlotRepository" as Repository

' === MAIN FLOW ===
DataOperator -> UI: Navigate to Slots page
activate UI

UI -> UI: Initialize filters\n(search, sort, pagination)

UI -> Controller: GET /api/v1/slots?page=1&pageSize=10&...
activate Controller

Controller -> Service: findAll(request)
activate Service

' === SEARCH QUERY ===
Service -> Repository: search(request)
activate Repository
Repository -->> Service: List<Slot>
deactivate Repository

' === POPULATE ATTENDANCE STATS ===
loop For each slot
    Service -> Repository: getAttendanceStats(slotId)
    activate Repository
    Repository -->> Service: AttendanceStatsDTO
    deactivate Repository
end

Service -->> Controller: List<SlotDTO>
deactivate Service

' === COUNT QUERY ===
Controller -> Service: count(request)
activate Service
Service -> Repository: count(request)
activate Repository
Repository -->> Service: Long
deactivate Repository
Service -->> Controller: Long
deactivate Service

' === RESPONSE ===
Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Display slot table\nwith attendance stats
deactivate UI

@enduml
