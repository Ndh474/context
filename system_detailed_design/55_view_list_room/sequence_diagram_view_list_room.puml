@startuml view_list_room
!theme plain
hide footbox

actor Client
participant ":RoomController" as Controller
participant ":RoomService" as Service
participant ":RoomRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Client -> Controller: GET /api/v1/rooms
activate Controller

Controller -> Service: search(request)
activate Service

' --- SEARCH QUERY ---
Service -> Repository: search(request)
activate Repository

Repository -> DB: Query Rooms with Filters and Pagination
activate DB
DB --> Repository: Room List
deactivate DB

Repository --> Service: List<RoomDTO>
deactivate Repository

Service --> Controller: List<RoomDTO>
deactivate Service

' --- COUNT QUERY ---
Controller -> Service: count(request)
activate Service

Service -> Repository: count(request)
activate Repository

Repository -> DB: Count Total Rooms
activate DB
DB --> Repository: Total Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service --> Controller: Long
deactivate Service

' Build paging response (internal)

Controller --> Client: 200 OK
deactivate Controller

@enduml
