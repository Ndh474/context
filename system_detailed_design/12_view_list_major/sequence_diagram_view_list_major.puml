@startuml view_list_major
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:MajorsPage" as UI
participant "«control»\n:MajorController" as Controller
participant "«service»\n:MajorService" as Service
participant "«database wrapper»\n:MajorRepository" as Repository

' === MAIN FLOW ===
DataOperator -> UI: Navigate to Majors page
activate UI

UI -> UI: Initialize filters\n(search, sort, pagination, isActive)

UI -> Controller: GET /api/v1/majors?page=1&pageSize=10&...
activate Controller

Controller -> Service: search(request)
activate Service

Service -> Repository: search(request)
activate Repository
Repository -->> Service: List<MajorDTO>
deactivate Repository

Service -->> Controller: List<MajorDTO>
deactivate Service

Controller -> Service: count(request)
activate Service

Service -> Repository: count(request)
activate Repository
Repository -->> Service: Long
deactivate Repository

Service -->> Controller: Long
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Display major table\nwith pagination
deactivate UI

@enduml
