@startuml update_staff
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class StaffProfileController {
  + update(id, request) : Response
}

' --- SERVICE ---
class StaffProfileService {
  + update(id, request) : StaffProfileDTO
}

' --- REPOSITORY ---
interface StaffProfileRepository <<interface>> {
  + findById(id : Integer) : Optional<StaffProfile>
  + existsByStaffCodeAndUserIdNot(staffCode, userId) : boolean
  + save(profile : StaffProfile) : StaffProfile
}

' --- ENTITIES ---
class StaffProfile {
  - userId : Integer
  - user : User
  - staffCode : String
}

class User {
  - id : Integer
  - username : String
  - email : String
  - fullName : String
}

' --- DEPENDENCY INJECTION (Association) ---
StaffProfileController -down-> StaffProfileService
StaffProfileService -down-> StaffProfileRepository

' --- REPOSITORY USAGE (Dependency) ---
StaffProfileRepository .down.> StaffProfile

' --- ENTITY RELATIONSHIPS (Aggregation) ---
StaffProfile o-left- User

@enduml
