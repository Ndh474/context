@startuml update_staff
!theme plain
hide footbox

actor Admin
participant ":StaffProfileController" as Controller
participant ":StaffProfileService" as Service
participant ":StaffProfileRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: PUT /api/v1/staff-profiles/{id}
activate Controller

Controller -> Service: update(id, request)
activate Service

Service -> Repository: findById(id)
activate Repository

Repository -> DB: Query Staff by ID
activate DB
DB --> Repository: Staff Record / Null
deactivate DB

Repository --> Service: Optional<StaffProfile>
deactivate Repository

alt Staff not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller --> Admin: 404 Not Found
end

' Validation logic (internal: staff code/email uniqueness, role validation)

alt Validation failed
    Service -->> Controller: <<throw>> ValidationException
    Controller --> Admin: 400 Bad Request / 409 Conflict
end

Service -> Repository: save(profile)
activate Repository

Repository -> DB: Update Staff Profile
activate DB
DB --> Repository: Updated Profile
deactivate DB

Repository --> Service: StaffProfile
deactivate Repository

Service --> Controller: StaffProfileDTO
deactivate Service

Controller --> Admin: 200 OK
deactivate Controller

@enduml
