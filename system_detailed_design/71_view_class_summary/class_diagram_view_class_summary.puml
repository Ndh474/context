@startuml view_class_summary
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class ClassController {
  + getClassSummary(classId, semester) : Response
}

' --- SERVICE ---
class ClassSummaryService {
  + getClassSummary(classId, semesterId) : ClassSummaryDTO
}

' --- REPOSITORY ---
interface ClassRepository <<interface>> {
  + findById(id : Short) : Optional<AcademicClass>
}

interface SlotRepository <<interface>> {
  + findByClassIdAndStaffUserId(classId, staffUserId) : List<Slot>
}

interface EnrollmentRepository <<interface>> {
  + countByClassIdAndEnrolled(classId, enrolled) : Long
}

' --- ENTITIES ---
class Slot {
  - id : Integer
  - title : String
  - staff : User
  - academicClass : AcademicClass
}

class AcademicClass {
  - id : Short
  - name : String
  - code : String
  - semester : Semester
  - subject : Subject
}

class Enrollment {
  - id : EnrollmentId
  - student : User
  - academicClass : AcademicClass
  - enrolled : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
ClassController -down-> ClassSummaryService
ClassSummaryService -down-> ClassRepository
ClassSummaryService -down-> SlotRepository
ClassSummaryService -down-> EnrollmentRepository

' --- REPOSITORY USAGE (Dependency) ---
ClassRepository .down.> AcademicClass
SlotRepository .down.> Slot
EnrollmentRepository .down.> Enrollment

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Slot o-right- AcademicClass
AcademicClass -right-o Enrollment

@enduml
