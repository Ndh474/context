@startuml update_semester
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SemesterController {
  + update(id, request) : Response
}

' --- SERVICE ---
class SemesterService {
  + update(id, request) : Semester
}

' --- REPOSITORY ---
interface SemesterRepository <<interface>> {
  + findById(id : Short) : Optional<Semester>
  + existsByCodeAndIdNot(code, id) : boolean
  + existsByNameAndIdNot(name, id) : boolean
  + existsByDateRangeOverlapAndIdNot(startDate, endDate, id) : boolean
  + save(semester : Semester) : Semester
}

' --- ENTITIES ---
class Semester {
  - id : Short
  - name : String
  - code : String
  - startDate : LocalDate
  - endDate : LocalDate
  - isActive : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
SemesterController -down-> SemesterService
SemesterService -down-> SemesterRepository

' --- REPOSITORY USAGE (Dependency) ---
SemesterRepository .down.> Semester

@enduml
