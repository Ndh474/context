@startuml import_csv_student
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class StudentProfileController {
  + importStudentProfiles(file, mode) : Response
}

' --- SERVICE ---
class StudentProfileService {
  + importFromCsv(file, mode) : ImportResultDTO
  + processOneStudentRow(row, mode) : void
}

class CsvParserService {
  + parseStudentProfileCsv(file) : List<StudentProfileCsvRow>
}

' --- REPOSITORY ---
interface StudentProfileRepository <<interface>> {
  + findByRollNumber(rollNumber : String) : StudentProfile
  + save(profile : StudentProfile) : StudentProfile
}

interface UserRepository <<interface>> {
  + save(user : User) : User
}

' --- ENTITIES ---
class StudentProfile {
  - userId : Integer
  - user : User
  - major : Major
  - rollNumber : String
}

class User {
  - id : Integer
  - username : String
  - email : String
  - fullName : String
}

class Major {
  - id : Short
  - name : String
  - code : String
}

' --- DEPENDENCY INJECTION (Association) ---
StudentProfileController -down-> StudentProfileService
StudentProfileService -down-> CsvParserService
StudentProfileService -down-> StudentProfileRepository
StudentProfileService -down-> UserRepository

' --- REPOSITORY USAGE (Dependency) ---
StudentProfileRepository .down.> StudentProfile
UserRepository .down.> User

' --- ENTITY RELATIONSHIPS (Aggregation) ---
StudentProfile o-left- User
StudentProfile o-right- Major

@enduml
