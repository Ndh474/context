@startuml view_list_subject
!theme plain
hide footbox

actor Client
participant ":SubjectController" as Controller
participant ":SubjectService" as Service
participant ":SubjectRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Client -> Controller: GET /api/v1/subjects
activate Controller

Controller -> Service: search(request)
activate Service

' --- SEARCH QUERY ---
Service -> Repository: search(request)
activate Repository

Repository -> DB: Query Subjects with Filters and Pagination
activate DB
DB --> Repository: Subject List with Majors
deactivate DB

Repository --> Service: List<Subject>
deactivate Repository

Service --> Controller: List<Subject>
deactivate Service

' --- COUNT QUERY ---
Controller -> Service: count(request)
activate Service

Service -> Repository: count(request)
activate Repository

Repository -> DB: Count Total Subjects
activate DB
DB --> Repository: Total Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service --> Controller: Long
deactivate Service

' Build paging response (internal)

Controller --> Client: 200 OK
deactivate Controller

@enduml
