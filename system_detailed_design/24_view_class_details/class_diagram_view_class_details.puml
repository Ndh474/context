@startuml view_class_details
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class ClassController {
  + findById(id) : Response
}

' --- SERVICE ---
class ClassService {
  + findById(id) : Class
}

' --- REPOSITORY ---
interface ClassRepository <<interface>> {
  + findById(id : Short) : Optional<AcademicClass>
  + countAllStudentsByClassId(id : Short) : long
  + countEnrolledStudentsByClassId(id : Short) : long
  + countAllSlotsByClassId(id : Short) : long
  + countActiveSlotsByClassId(id : Short) : long
}

' --- ENTITIES ---
class AcademicClass {
  - id : Short
  - code : String
  - isActive : Boolean
  - subject : Subject
  - semester : Semester
  - enrollments : Set<Enrollment>
  - slots : Set<Slot>
}

class Subject {
  - id : Short
  - name : String
  - code : String
  - isActive : Boolean
  - majors : Set<Major>
}

class Semester {
  - id : Short
  - name : String
  - code : String
  - startDate : LocalDate
  - endDate : LocalDate
  - isActive : Boolean
}

class Major {
  - id : Short
  - name : String
  - code : String
  - isActive : Boolean
}

class Enrollment {
  - id : Integer
  - isEnrolled : Boolean
}

class Slot {
  - id : Integer
  - isActive : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
ClassController -down-> ClassService
ClassService -down-> ClassRepository

' --- REPOSITORY USAGE (Dependency) ---
ClassRepository .down.> AcademicClass

' --- ENTITY RELATIONSHIPS (Aggregation) ---
AcademicClass o-right- Subject
AcademicClass o-right- Semester
AcademicClass o-down- Enrollment
AcademicClass o-down- Slot
Subject o-down- Major

@enduml
