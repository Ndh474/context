@startuml view_class_details
!theme plain
hide footbox

actor Client
participant ":ClassController" as Controller
participant ":ClassService" as Service
participant ":ClassRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Client -> Controller: GET /api/v1/classes/{id}
activate Controller

Controller -> Service: findById(id)
activate Service

Service -> Repository: findById(id)
activate Repository

Repository -> DB: Query Class by ID with Subject and Semester
activate DB
DB --> Repository: Class Record / Null
deactivate DB

Repository --> Service: Optional<AcademicClass>
deactivate Repository

' --- VALIDATION LOGIC ---
alt Class not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller --> Client: 404 Not Found
end

' --- COUNT STUDENTS ---
Service -> Repository: countAllStudentsByClassId(id)
activate Repository

Repository -> DB: Count All Students
activate DB
DB --> Repository: Total Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service -> Repository: countEnrolledStudentsByClassId(id)
activate Repository

Repository -> DB: Count Enrolled Students
activate DB
DB --> Repository: Enrolled Count
deactivate DB

Repository --> Service: Long
deactivate Repository

' --- COUNT SLOTS ---
Service -> Repository: countAllSlotsByClassId(id)
activate Repository

Repository -> DB: Count All Slots
activate DB
DB --> Repository: Total Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service -> Repository: countActiveSlotsByClassId(id)
activate Repository

Repository -> DB: Count Active Slots
activate DB
DB --> Repository: Active Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service --> Controller: Class
deactivate Service

Controller --> Client: 200 OK
deactivate Controller

@enduml
