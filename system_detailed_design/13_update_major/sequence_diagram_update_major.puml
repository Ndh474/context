@startuml update_major
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:MajorFormDialog" as UI
participant "«control»\n:MajorController" as Controller
participant "«service»\n:MajorService" as Service
participant "«database wrapper»\n:MajorRepository" as Repository
participant "«entity»\n:Major" as Entity

' === MAIN FLOW ===
DataOperator -> UI: Edit major data\n(name, code, isActive)
activate UI

DataOperator -> UI: Submit form
UI -> Controller: PUT /api/v1/majors/{id}
activate Controller

Controller -> Service: update(id, request)
activate Service

' === FIND EXISTING ===
Service -> Repository: findById(id)
activate Repository
Repository -->> Service: Optional<Major>
deactivate Repository

alt Major not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller -->> UI: 404 Not Found
    UI -->> DataOperator: Show error message
end

' === VALIDATION ===
Service -> Repository: existsByCodeAndIdNot(code, id)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt code exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

Service -> Repository: existsByNameAndIdNot(name, id)
activate Repository
Repository -->> Service: Boolean
deactivate Repository

alt name exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller -->> UI: 400 Bad Request
    UI -->> DataOperator: Show error message
end

' === UPDATE ENTITY ===
Service -> Entity: updateFromRequest(request)
activate Entity
Entity -->> Service: major
deactivate Entity

' === SAVE ===
Service -> Repository: save(major)
activate Repository
Repository -->> Service: savedMajor
deactivate Repository

Service -->> Controller: MajorDTO
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Show success message\nClose dialog & refresh list
deactivate UI

@enduml
