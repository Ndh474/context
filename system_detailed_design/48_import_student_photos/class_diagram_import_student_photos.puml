@startuml import_student_photos
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class StudentProfileController {
  + bulkUploadPhotosEmbeddings(csvFile, zipFile, mode) : Response
}

' --- SERVICE ---
class BulkPhotoUploadService {
  + processBulkUpload(csvFile, zipFile, mode) : ImportResultDTO
}

' --- REPOSITORY ---
interface StudentProfileRepository <<interface>> {
  + findByRollNumber(rollNumber : String) : StudentProfile
}

' --- ENTITIES ---
class StudentProfile {
  - userId : Integer
  - user : User
  - rollNumber : String
  - baseUrl : String
}

class User {
  - id : Integer
  - username : String
}

class FaceEmbedding {
  - id : Long
  - user : User
  - embeddingVector : float[]
}

' --- DEPENDENCY INJECTION (Association) ---
StudentProfileController -down-> BulkPhotoUploadService
BulkPhotoUploadService -down-> StudentProfileRepository

' --- REPOSITORY USAGE (Dependency) ---
StudentProfileRepository .down.> StudentProfile

' --- ENTITY RELATIONSHIPS (Aggregation) ---
StudentProfile o-left- User
FaceEmbedding o-right- User

@enduml
