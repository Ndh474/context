@startuml change_password
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class AuthenticationController {
  + updatePassword(id, request) : Response
}

' --- SERVICE ---
class AuthenticationService {
  + updatePassword(id, request) : String
  + validateUserActive(user) : void
}

' --- REPOSITORY ---
interface UserRepository <<interface>> {
  + findById(id : Integer) : Optional<User>
  + save(user : User) : User
}

' --- ENTITIES ---
class User {
  - id : Integer
  - username : String
  - email : String
  - passwordHash : String
  - isActive : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
AuthenticationController -down-> AuthenticationService
AuthenticationService -down-> UserRepository

' --- REPOSITORY USAGE (Dependency) ---
UserRepository .down.> User

@enduml
