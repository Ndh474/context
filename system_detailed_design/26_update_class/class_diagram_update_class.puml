@startuml update_class
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class ClassController {
  + update(id, request) : Response
}

' --- SERVICE ---
class ClassService {
  + update(id, request) : Class
}

' --- REPOSITORY ---
interface ClassRepository <<interface>> {
  + findById(id : Short) : Optional<AcademicClass>
  + existsByCodeAndSubjectIdAndSemesterIdAndIdNot(code, subjectId, semesterId, id) : boolean
  + findLastActiveSlotEndTimeByClassId(id : Short) : LocalDateTime
  + save(class : AcademicClass) : AcademicClass
}

' --- ENTITIES ---
class AcademicClass {
  - id : Short
  - code : String
  - isActive : Boolean
  - subject : Subject
  - semester : Semester
}

class Subject {
  - id : Short
  - name : String
  - code : String
}

class Semester {
  - id : Short
  - name : String
  - code : String
}

' --- DEPENDENCY INJECTION (Association) ---
ClassController -down-> ClassService
ClassService -down-> ClassRepository

' --- REPOSITORY USAGE (Dependency) ---
ClassRepository .down.> AcademicClass

' --- ENTITY RELATIONSHIPS (Aggregation) ---
AcademicClass o-left- Subject
AcademicClass o-right- Semester

@enduml
