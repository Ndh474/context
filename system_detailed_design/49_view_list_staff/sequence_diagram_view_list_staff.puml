@startuml view_list_staff
!theme plain
hide footbox

actor Client
participant ":StaffProfileController" as Controller
participant ":StaffProfileService" as Service
participant ":StaffProfileRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Client -> Controller: GET /api/v1/staff-profiles
activate Controller

Controller -> Service: search(request)
activate Service

' --- SEARCH QUERY ---
Service -> Repository: search(request)
activate Repository

Repository -> DB: Query Staff with Filters and Pagination
activate DB
DB --> Repository: Staff List
deactivate DB

Repository --> Service: List<StaffProfileDTO>
deactivate Repository

Service -> Repository: count(request)
activate Repository

Repository -> DB: Count Total Staff
activate DB
DB --> Repository: Total Count
deactivate DB

Repository --> Service: Long
deactivate Repository

Service --> Controller: PagingResponse
deactivate Service

Controller --> Client: 200 OK
deactivate Controller

@enduml
