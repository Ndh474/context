@startuml view_list_staff
!theme plain
hide footbox

actor "Data Operator" as Admin

participant "«user interaction»\n:StaffPage" as UI
participant "«control»\n:StaffProfileController" as Controller
participant "«service»\n:StaffProfileService" as Service
participant "«database wrapper»\n:StaffProfileRepository" as Repository

' --- MAIN FLOW ---
Admin -> UI: View Staff List
activate UI

UI -> UI: Initialize filters\n(search, pagination)

UI -> Controller: GET /api/v1/staff-profiles
activate Controller

Controller -> Service: search(request)
activate Service

' --- SEARCH QUERY ---
Service -> Repository: search(request)
activate Repository
Repository -->> Service: List<StaffProfileDTO>
deactivate Repository

Service -->> Controller: List<StaffProfileDTO>
deactivate Service

' --- COUNT QUERY ---
Controller -> Service: count(request)
activate Service

Service -> Repository: count(request)
activate Repository
Repository -->> Service: totalCount
deactivate Repository

Service -->> Controller: totalCount
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> Admin: Show staff list
deactivate UI

@enduml
