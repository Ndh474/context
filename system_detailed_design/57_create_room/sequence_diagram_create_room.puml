@startuml create_room
!theme plain
hide footbox

actor Admin
participant ":RoomController" as Controller
participant ":RoomService" as Service
participant ":RoomRepository" as Repository
participant "Database" as DB

' --- MAIN FLOW ---
Admin -> Controller: POST /api/v1/rooms
activate Controller

Controller -> Service: create(request)
activate Service

' --- VALIDATION LOGIC ---
Service -> Repository: existsByName(name)
activate Repository

Repository -> DB: Check Name Existence
activate DB
DB --> Repository: Boolean
deactivate DB

Repository --> Service: Boolean
deactivate Repository

alt Name already exists
    Service -->> Controller: <<throw>> ResourceExistsException
    Controller --> Admin: 409 Conflict
end

' --- SAVE TO DATABASE ---
Service -> Repository: save(room)
activate Repository

Repository -> DB: Insert New Room
activate DB
DB --> Repository: Saved Room
deactivate DB

Repository --> Service: Room
deactivate Repository

Service --> Controller: RoomDTO
deactivate Service

Controller --> Admin: 201 Created
deactivate Controller

@enduml
