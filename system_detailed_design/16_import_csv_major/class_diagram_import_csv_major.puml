@startuml Import CSV Major - Class Diagram
!theme plain
skinparam classAttributeIconSize 0
hide circle
skinparam circledCharacterRadius 0

class MajorController {
  - majorService : MajorService
  + importMajors(file : MultipartFile, mode : String) : Response<ImportResultDTO>
}

class MajorService {
  - majorRepository : MajorRepository
  - csvParserService : CsvParserService
  - majorMapper : MajorMapper
  + importFromCsv(file : MultipartFile, modeStr : String) : ImportResultDTO
  # processOneMajorRow(row : MajorCsvRow, mode : ImportMode) : void
}

class CsvParserService {
  + parseMajorCsv(file : MultipartFile) : List<MajorCsvRow>
}

interface MajorRepository <<interface>> {
  + findByCode(code : String) : Major
  + existsByName(name : String) : boolean
  + save(entity : Major) : Major
}

interface MajorMapper <<interface>> {
  + toEntity(request : MajorCreateRequest) : Major
  + toDTO(entity : Major) : MajorDTO
}

class Major {
  - id : Short
  - name : String
  - code : String
  - subjects : Set<Subject>
  - studentProfiles : Set<StudentProfile>
}

class BaseEntity {
  - isActive : Boolean
  - createdAt : Instant
  - updatedAt : Instant
}

class MajorCsvRow {
  - rowNumber : int
  - code : String
  - name : String
  - isActive : Boolean
  + isValid() : boolean
  + getUniqueKey() : String
}

class ImportResultDTO {
  - successCount : int
  - failureCount : int
  - errors : List<ImportErrorDTO>
}

class ImportErrorDTO {
  - rowNumber : int
  - errorCode : String
  - message : String
}

class Response<T> {
  - status : int
  - message : String
  - code : String
  - data : T
}

class ImportMode <<enumeration>> {
  ADD_ONLY
  ADD_AND_UPDATE
  + fromString(mode : String) : ImportMode
}

MajorController --> MajorService
MajorService --> MajorRepository
MajorService --> CsvParserService
MajorService --> MajorMapper

MajorController ..> Response : <<use>>
MajorController ..> ImportResultDTO : <<use>>
MajorService ..> ImportResultDTO : <<use>>
MajorService ..> MajorCsvRow : <<use>>
MajorService ..> ImportMode : <<use>>
MajorService ..> Major : <<use>>
CsvParserService ..> MajorCsvRow : <<use>>
MajorRepository ..> Major : <<use>>
MajorMapper ..> Major : <<use>>

ImportResultDTO *-- ImportErrorDTO

Major --|> BaseEntity

@enduml
