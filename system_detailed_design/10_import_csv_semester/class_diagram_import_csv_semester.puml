@startuml import_csv_semester
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SemesterController {
  + importFromCsv(file, mode) : Response
}

' --- SERVICE ---
class SemesterService {
  + importFromCsv(file, mode) : ImportResult
  + parseAndValidateCsv(file) : List<Row>
  + processImportRow(row, mode) : Result
}

' --- REPOSITORY ---
interface SemesterRepository <<interface>> {
  + findByCode(code : String) : Optional<Semester>
  + existsByCode(code : String) : boolean
  + existsByName(name : String) : boolean
  + existsByNameAndIdNot(name, id) : boolean
  + existsByDateRangeOverlap(startDate, endDate) : boolean
  + existsByDateRangeOverlapAndIdNot(startDate, endDate, id) : boolean
  + save(semester : Semester) : Semester
}

' --- ENTITIES ---
class Semester {
  - id : Short
  - name : String
  - code : String
  - startDate : LocalDate
  - endDate : LocalDate
  - isActive : Boolean
  - academicClasses : Set<AcademicClass>
}

class AcademicClass {
  - id : Integer
  - name : String
  - code : String
}

' --- DEPENDENCY INJECTION (Association) ---
SemesterController -down-> SemesterService
SemesterService -down-> SemesterRepository

' --- REPOSITORY USAGE (Dependency) ---
SemesterRepository .down.> Semester

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Semester o-right- AcademicClass

@enduml
