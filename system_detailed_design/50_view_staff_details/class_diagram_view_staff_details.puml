@startuml view_staff_details
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class StaffProfileController {
  + getById(id) : Response
}

' --- SERVICE ---
class StaffProfileService {
  + findById(id) : StaffProfileDTO
}

' --- REPOSITORY ---
interface StaffProfileRepository <<interface>> {
  + findById(id : Integer) : Optional<StaffProfile>
}

' --- ENTITIES ---
class StaffProfile {
  - userId : Integer
  - user : User
  - staffCode : String
}

class User {
  - id : Integer
  - username : String
  - email : String
  - fullName : String
  - active : Boolean
  - roles : Set<Role>
}

class Role {
  - id : Short
  - name : String
}

' --- DEPENDENCY INJECTION (Association) ---
StaffProfileController -down-> StaffProfileService
StaffProfileService -down-> StaffProfileRepository

' --- REPOSITORY USAGE (Dependency) ---
StaffProfileRepository .down.> StaffProfile

' --- ENTITY RELATIONSHIPS (Aggregation) ---
StaffProfile o-right- User
User o-right- Role

@enduml
