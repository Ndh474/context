@startuml delete_semester
!theme plain
hide circle
skinparam classAttributeIconSize 0

' --- CẤU HÌNH "ORTHO" (BẮT BUỘC) ---
skinparam linetype ortho
skinparam nodesep 60
skinparam ranksep 60

' --- CONTROLLER ---
class SemesterController {
  + delete(id) : Response
}

' --- SERVICE ---
class SemesterService {
  + delete(id) : void
}

' --- REPOSITORY ---
interface SemesterRepository <<interface>> {
  + existsById(id : Short) : boolean
  + countClassesBySemesterId(id : Short) : long
  + deleteById(id : Short) : void
}

' --- ENTITIES ---
class Semester {
  - id : Short
  - name : String
  - code : String
  - startDate : LocalDate
  - endDate : LocalDate
  - isActive : Boolean
  - academicClasses : Set<AcademicClass>
}

class AcademicClass {
  - id : Integer
  - name : String
  - code : String
  - isActive : Boolean
}

' --- DEPENDENCY INJECTION (Association) ---
SemesterController -down-> SemesterService
SemesterService -down-> SemesterRepository

' --- REPOSITORY USAGE (Dependency) ---
SemesterRepository .down.> Semester

' --- ENTITY RELATIONSHIPS (Aggregation) ---
Semester o-right- AcademicClass

@enduml
