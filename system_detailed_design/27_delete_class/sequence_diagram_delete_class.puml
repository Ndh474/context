@startuml delete_class
!theme plain
hide footbox

actor "Data Operator" as DataOperator

participant "«user interaction»\n:DeleteClassDialog" as UI
participant "«control»\n:ClassController" as Controller
participant "«service»\n:ClassService" as Service
participant "«database wrapper»\n:ClassRepository" as Repository

' === MAIN FLOW ===
DataOperator -> UI: Click "Delete" button
activate UI

UI -> UI: Show confirmation dialog

DataOperator -> UI: Confirm delete
UI -> Controller: DELETE /api/v1/classes/{id}
activate Controller

Controller -> Service: delete(id)
activate Service

' === FIND EXISTING ===
Service -> Repository: findById(id)
activate Repository
Repository -->> Service: Optional<AcademicClass>
deactivate Repository

alt Class not found
    Service -->> Controller: <<throw>> ResourceNotFoundException
    Controller -->> UI: 404 Not Found
    UI -->> DataOperator: Show error message
end

' === CHECK SLOTS ===
Service -> Repository: countAllSlotsByClassId(id)
activate Repository
Repository -->> Service: Long
deactivate Repository

alt Has slots
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> DataOperator: Show error message\n"Cannot delete class with slots"
end

' === CHECK ENROLLMENTS ===
Service -> Repository: countAllStudentsByClassId(id)
activate Repository
Repository -->> Service: Long
deactivate Repository

alt Has enrollments
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> DataOperator: Show error message\n"Cannot delete class with enrollments"
end

' === DELETE OPERATION ===
Service -> Repository: deleteById(id)
activate Repository

alt Foreign key constraint violation
    Repository -->> Service: <<throw>> DataIntegrityViolationException
    Service -->> Controller: <<throw>> OperationNotAllowedException
    Controller -->> UI: 403 Forbidden
    UI -->> DataOperator: Show error message
end

Repository -->> Service: void
deactivate Repository

Service -->> Controller: void
deactivate Service

Controller -->> UI: 200 OK
deactivate Controller

UI -->> DataOperator: Show success message\nClose dialog & refresh list
deactivate UI

@enduml
