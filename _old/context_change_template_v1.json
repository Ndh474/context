        "desc": "Add/Remove elements for array (string/number)",
        "fields": [
          "add",
          "remove"
        ]
      },
      "upsert_array_object": {
        "desc": "Add or update 1 object in array based on match condition (not using index)",
        "fields": [
          "match",
          "set",
          "add",
          "remove",
          "object_key"
        ]
      },
      "upsert_map_entry": {
        "desc": "Add/edit 1 key/value pair in object map",
        "fields": [
          "key",
          "value"
        ]
      }
    },
